<% layout("/layouts/boilerplate") -%>

<div class="row mt-3">
  <!-- <h1 class="lg-md-col-6 sm-col-7 offset-3"> -->
  <h1 class="text-center display-4 mb-4">SignUp on wanderlust</h1>
  <div class="col-6 offset-3">
    <form action="/signup" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
          pattern="[a-z0-9._]+"
        />
        <div class="invalid-feedback">Please enter lowercase letters only.</div>
        <div class="valid-feedback">Looks good!</div>
      </div>
      
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          name="email"
          id="email"
          type="email"
          class="form-control"
          required
          pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
        />
        <div class="invalid-feedback">Please enter a valid email address.</div>
        <div class="valid-feedback">Looks good!</div>
      </div>
      
      

      <div class="mb-3">
        <label for="password" class="form-label">password</label>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
      </div>

      <button class="btn btn-outline-success">SignUp</button>

      <div class="login-message">
        <p>Already have an account?  <a href="/login" class="login-link"><b>Login</b></a></p>
      </div>
    </form>
  </div>
</div>
